{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    // "noEmit": true, // 编译后不输出任何js文件
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "baseUrl": "./",  // 解析非相对模块的基础地址，默认是当前目录
    "paths": { // 路径映射，相对于baseUrl
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/main.ts", "src/main.js", "packages/**/*.ts", "packages/**/*.d.ts", "packages/**/*.tsx", "packages/**/*.vue", "packages/main.ts", "packages/main.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
